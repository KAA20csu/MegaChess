<Window x:Class="MegaChess.Desktop.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaChess.Desktop"
        mc:Ignorable="d"
        Title="Game" Height="730" Width="730" BorderBrush="Black" Closing="Window_Closing">
    <StackPanel>
        <Label HorizontalAlignment="Center" Content="White" FontSize="24" FontFamily="Algerian"/>
        <Grid Height="615">

            <Border BorderBrush="Black"
            BorderThickness="1"
            Margin="5"
            Grid.Row="1" Grid.Column="0">
                <Canvas x:Name="field" SizeChanged="Field_SizeChanged"></Canvas>

            </Border>
        </Grid>
        <Label HorizontalAlignment="Center" Content="Black" FontSize="24" FontFamily="Algerian"/>
    </StackPanel>
    
</Window>
